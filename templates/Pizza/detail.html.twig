{% extends "base.html.twig" %}

{% block title %}Liste des ingrédients{% endblock %}

{% block titrePage %}
    Les ingrédients
{% endblock %}

{% block body %}
    <div class="tp-detail-page">
        {% for ingredientPizza in pizza.IngredientsPizza() %}
            <div class="tp-detail-title">
                <p>Prix de fabrication</p>
            </div>
            <span>{{ ingredientPizza.ingredient.cout }}</span>
            <br/>
            <div class="tp-detail-title">
                <p>Ingrédients</p>
            </div>
            <span>{{ ingredientPizza.ingredient.name }}</span>
            {% endfor %}
    </div>
{% endblock %}